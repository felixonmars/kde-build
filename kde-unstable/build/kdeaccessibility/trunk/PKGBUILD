# $Id: PKGBUILD 17567 2008-10-31 03:06:12Z pierre $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kdeaccessibility
pkgver=4.1.72
pkgrel=1
pkgdesc="KDE Accessibility Aids"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'FDL')
groups=('kde')
depends=('kdelibs')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdebase-runtime')
options=('docs')
install='kdeaccessibility.install'
source=("http://download.kde.org/unstable/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('8c2958f8224557bc57987ef430c308be')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
