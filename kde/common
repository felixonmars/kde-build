. /etc/makepkg.conf

if [ -r ~/.makepkg.conf ]; then
	. ~/.makepkg.conf
fi

. config

if [[ ! -d build ]]; then
	mkdir build
fi

if [ $branch == 'unstable' ]; then
	svnbranch='trunk'
	repo='testing'
else
	svnbranch='trunk'
	repo='extra'
fi

l10nPkgName=''

if $l10n; then
	for i in `cat kde-l10n-names`; do
		l10nPkgName="${l10nPkgName} kde-l10n-$(echo "${i}" | tr [:upper:] [:lower:])"
	done
fi
