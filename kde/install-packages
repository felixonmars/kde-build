#!/bin/bash

. common

pkglist=''

_pushd build/oxygen-icons/${svnbranch}
. PKGBUILD
pkgfile="build/oxygen-icons/${svnbranch}/oxygen-icons-${pkgver}-${pkgrel}-any${PKGEXT}"
pkglist="${pkglist} ${pkgfile}"
_popd

_pushd build/kde-wallpapers/${svnbranch}
. PKGBUILD
pkgfile="build/kde-wallpapers/${svnbranch}/kde-wallpapers-${pkgver}-${pkgrel}-any${PKGEXT}"
pkglist="${pkglist} ${pkgfile}"
_popd

for i in ${depPkgName} ${optPkgName}; do
	_pushd build/${i}/${svnbranch}
	unset pkgname
	. PKGBUILD
	for j in ${pkgname[@]}; do
		pkgfile="build/${i}/${svnbranch}/${j}-${pkgver}-${pkgrel}-${CARCH}${PKGEXT}"
		pkglist="${pkglist} ${pkgfile}"
	done
	_popd
done

sudo pacman -U ${pkglist}