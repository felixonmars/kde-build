#!/bin/bash

. common

for i in ${depPkgName} ${optPkgName} ${l10nPkgName}; do
	_pushd build/${i}/${svnbranch}
	namcap PKGBUILD > namcap-PKGBUILD.log
	unset pkgname
	. PKGBUILD
	for j in ${pkgname[@]}; do
		if [ -f ${i}-${pkgver}-${pkgrel}-${CARCH}${PKGEXT} ]; then
			pkgfile=${i}-${pkgver}-${pkgrel}-${CARCH}${PKGEXT}
		else
			pkgfile=${i}-${pkgver}-${pkgrel}-any${PKGEXT}
		fi
		echo "checking ${pkgfile}..."
		namcap ${pkgfile} > namcap-${pkgfile}.log
	done
	_popd
done
