#!/bin/bash

. common

copkg() {
	svn co svn+ssh://gerolde.archlinux.org/srv/svn-packages/${1} ${2}
}

for i in ${depPkgName} ${optPkgName} kde-l10n kde-meta; do
    if [ -d "build/${i}" ]; then
        cd build/${i}
        svn update
        cd ../../
    else
	    copkg ${i} build/${i}
    fi
done
