#!/bin/bash

. common

revision=${kdever#*git}
tmp=$(mktemp -d)

_pushd $tmp

for i in ${depPkgName} ${optPkgName}; do
	echo "$i"

	if [ "$i" == "kdebase" ]; then
		src="kde-baseapps"
	elif [ "$i" == "kdebase-runtime" ]; then
		src="kde-runtime"
	elif [ "$i" == "kdebase-workspace" ]; then
		src="kde-workspace"
	else
		src="$i"
	fi

	git clone -q "git://anongit.kde.org/${src}" "${i}-${kdever}"

	rm -rf $(find "${i}-${kdever}" -type d -name .git*)

	bsdtar -cjf "${SRCDEST}/${i}-${kdever}.tar.bz2" "${i}-${kdever}"
	rm -rf "${i}-${kdever}"
done

_popd

rm -rf $tmp
