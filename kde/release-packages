#!/bin/bash

. common

for i in ${depPkgName} ${optPkgName}; do
	_pushd build/${i}/$svnbranch
	$pwd/../common/urelease $repo-$CARCH
	_popd
done

for i in ${l10nPkgName}; do
	_pushd build/${i}/$svnbranch
	$pwd/../common/urelease $repo-any
	_popd
done

