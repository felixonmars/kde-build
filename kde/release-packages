#!/bin/bash

. common

# Pass i686 as argument if you want to release i686 packages
arch=$1
[[ -z ${arch} ]] && arch=$(uname -m)

for i in ${depPkgName} ${optPkgName}; do
	_pushd build/${i}/$svnbranch
	if [ "$i" == "oxygen-icons" -a "${any}" == "true" ]; then
		archrelease ${repo}-any
	else
		archrelease ${repo}-${arch}
	fi
	_popd
done

if ${l10n}; then
	_pushd build/kde-l10n/$svnbranch
	archrelease ${repo}-any
	_popd
fi